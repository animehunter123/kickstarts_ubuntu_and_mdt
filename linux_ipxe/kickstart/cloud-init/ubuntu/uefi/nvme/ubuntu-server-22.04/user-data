    - rm -f /target/etc/resolv.conf
    - curtin in-target --target=/target -- sh -c ' cd /etc ; systemctl disable systemd-resolved --now ; sed -i "s/\[main\]/\[main\]\ndns=default/" /etc/NetworkManager/NetworkManager.conf '

